@page
@model Boglistesystem.Pages.UnderviserPage.GetHold.AddBogModel
@{
}

<div class="custom-container">
    <div class="custom-form">
        <h1 class="fw-light">Registrer Bog til Hold</h1>
        <p class="lead text-muted">Du kan som koordinator indtaste dit navn og finde det hold du er tilknyttet til og registrere de relevante bøger som de forskellige hold skal have.</p>
        <form method="post">
            <div asp-validation-summary=" ModelOnly" class=" class=" invalid-feedback"">
            </div>
            <input hidden asp-for="@Model.BogHold.Hold_id" class="form-control" required />
            <div class="form-floating mb-2">
                <select asp-for="@Model.BogHold.Bog_id" asp-items="@Model.BogList" class="form-select" style="height: 58px; margin-bottom: 10px" required>
                    <option value="">Bog</option>
                </select>
                <span asp-validation-for="@Model.BogHold.Bog_id" class="invalid-feedback"></span>
                <label asp-for="@Model.BogHold.Bog_id" class=" control_label"></label>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrer Bog" class="w-100 btn btn-lg btn-dark" />
            </div>
        </form>
    </div>
</div>