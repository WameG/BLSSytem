@page
@model Boglistesystem.Pages.koordinatorModel
@{
}

<div class="custom-container">
    <div class="custom-form">
        <h1 class="fw-light">Koordinator</h1>
        <p class="lead text-muted">Du kan som koordinator oprette underviser, hold, fag, uddannelse og semestre. Derudover kan man også tilknytte underviser til de forskellige hold. Hvis du ikke allerede er oprettet som koordinator kan du ved at klikke <a class="text-primary" asp-area="" asp-page="/KoordinatorPage/AlleKoordinator">her</a> oprette dig selv som koordinator.</p>
        @if (Model.ErrorMessage != null)
        {
            <span class="btn btn-danger" style="width: 500px; margin-bottom: 20px;">@Model.ErrorMessage</span>
        }
        <form method="post">
            <div asp-validation-summary=" ModelOnly" class=" text-danger">
            </div>
            <div class="form-floating mb-2">
                <input asp-for="@Model.Koordinator.Navn " class="form-control" />
                <label asp-for="@Model.Koordinator.Navn " class=" control_label"></label>
            </div>
            <div class="form-group">
                <input type="submit" value="Indtast dit navn" class="w-100 btn btn-lg btn-dark" />
            </div>
        </form>
    </div>
</div>