@page
@model Boglistesystem.Pages.KoordinatorPage.UnderviserPage.CreateUnderviserModel
@{
    ViewData["Titel"] = "Opret Underviser";
}

<div class="custom-container">
    <div class="custom-form">
            <h1 class="fw-light">Opret Koordinator</h1>
            <p class="lead text-muted">Du kan som koordinator indtaste dit navn og finde det hold du er tilknyttet til og registrere de relevante bøger som de forskellige hold skal have.</p>
        <form method="post">
            <div asp-validation-summary=" ModelOnly" class=" text-danger">
           </div>
            <div class="form-floating mb-2">
                <input asp-for="@Model.Underviser.Underviser_id" class="form-control" />
                <label asp-for="@Model.Underviser.Underviser_id" class=" control_label"></label>
                <span asp-validation-for="@Model.Underviser.Underviser_id" class=" text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="@Model.Underviser.Navn" class="form-control" />
                <label asp-for="@Model.Underviser.Navn " class=" control_label"></label>
                <span asp-validation-for="@Model.Underviser.Navn " class=" text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="@Model.Underviser.Initialer" class="form-control" />
                <label asp-for="@Model.Underviser.Initialer" class=" control_label"></label>
                <span asp-validation-for="@Model.Underviser.Initialer" class=" text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="@Model.Underviser.Koordinator_id" class="form-control" />
                <label asp-for="@Model.Underviser.Koordinator_id" class=" control_label"></label>
                <span asp-validation-for="@Model.Underviser.Koordinator_id" class=" text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opret ny underviser" class="w-100 btn btn-lg btn-dark" />
            </div>
        </form>
    </div>
</div>